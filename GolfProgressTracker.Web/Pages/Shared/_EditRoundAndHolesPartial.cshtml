@model GolfProgressTracker.Core.ViewModels.RoundAndHolesViewModel

<form method="post">
    <input asp-for="Round.Id" hidden />
    <div class="row mt-2">
        <div class="col-8">
            <div class="form-floating">
                <input asp-for="Round.Title" class="form-control" placeholder=" " />
                <label asp-for="Round.Title">Title</label>
            </div>
            <span asp-validation-for="Round.Title" class="text-danger"></span>
        </div>
        <div class="col-4">
            <div class="form-floating">
                <input asp-for="Round.DatePlayed" type="date" class="form-control" placeholder=" " />
                <label asp-for="Round.DatePlayed">Date Played</label>
            </div>
            <span asp-validation-for="Round.DatePlayed" class="text-danger"></span>
        </div>
    </div>
    <div class="row container mt-3">
        @for (int i = 0; i < Model.Holes.Count; i++)
        {
            var className = i == 0 ? "row" : "row mt-2";

            <div class="@className">
                <input asp-for="Holes[i].Id" hidden />
                <div class="col">
                    <div class="form-floating">
                        <input asp-for="Holes[i].Number" class="form-control" placeholder=" " />
                        <label asp-for="Holes[i].Number">Number</label>
                    </div>
                    <span asp-validation-for="Holes[i].Number" class="text-danger"></span>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input asp-for="Holes[i].Par" class="form-control" placeholder=" " />
                        <label asp-for="Holes[i].Par">Par</label>
                    </div>
                    <span asp-validation-for="Holes[i].Par" class="text-danger"></span>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input asp-for="Holes[i].Shots" class="form-control" placeholder=" " />
                        <label asp-for="Holes[i].Shots">Shots</label>
                    </div>
                    <span asp-validation-for="Holes[i].Shots" class="text-danger"></span>
                </div>
            </div>
        }
    </div>
    <div class="row mt-3 text-end">
        <div class="col-10"></div>
        <div class="col-2">
            <input type="submit" class="btn btn-primary w-100" asp-page-handler="AddHole" value="Add Hole" />
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-10"></div>
        <div class="col-2">
            <input type="submit" class="btn btn-danger w-100" asp-page-handler="DeleteHole" value="Remove Hole" />
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-8"></div>
        <div class="col-4">
            <input type="submit" class="btn btn-success w-100" asp-page-handler="SaveChanges" value="SaveChanges" />
        </div>
    </div>
</form>