@page
@model GolfProgressTracker.Web.Pages.AddRoundModel

@Html.AntiForgeryToken()

<div class="container text-center">
    <div class="row text-start">
        <div class="col ms-5">
            <h3>Add Round</h3>
        </div>
    </div>
    @if (TempData["Error"] is not null)
    {
        <div class="row my-2">
            <div class="col">
                <div class="alert alert-danger" role="alert">
                    <span>@TempData["Error"]</span>
                </div>
            </div>
        </div>
    }
    <partial name="~/Pages/Shared/_AddRoundAndHolesPartial.cshtml" model="Model.AddRoundAndHolesViewModel" />
</div>